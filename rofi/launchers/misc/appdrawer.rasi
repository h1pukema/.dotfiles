configuration {
	font:							"Noto Sans 14";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"ïŒƒ";
    drun-display-format:            "{name}";
    disable-history:                false;
	sidebar-mode: 					false;
}

/* -- Light -- */
* {
    background:                     #3b445488;
    background-alt:              	#00000000;
    background-bar:                 #3b445488;
    foreground:                     #EDEDEDFF;
    accent:			            	#EDEDEDFF;
    border:		               		#5e81ac88;
    selected:               		#151515ff;
}

/* -- Dark -- */
