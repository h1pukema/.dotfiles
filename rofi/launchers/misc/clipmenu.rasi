configuration {
	font:							"Noto Sans 16";
    show-icons:                     false;
	icon-theme: 					"Papirus";
    display-drun: 					"ïŒƒ";
    disable-history:                false;
	sidebar-mode: 					false;
}

/* -- Light -- */
*{
    background:                     #3b445488;
    background-alt:              	#3b445400;
    background-bar:                 #3b445488;
    foreground:                     #EDEDED;
    accent:			            	#EDEDEDFF;
    border:		               		#5e81ac88;
    selected:               		#151515ff;
}

